- var title = "Future Simple";
html
    include html/head
    body
        .wrapper.wrapper__tense
            include html/header
            main.main
                .container
                    section.tense(data-tense-id="futureSimple")
                        button.tense__arrow-prev
                            img(class="tense__arrow-prev-img", src="@img/arrow-prev.svg", alt="prev")
                        section.tense__wrapper
                            .tense__header
                                .tense__progress
                                    h4.tense__header-title=title

                                a(href="grammar.html").tense__header-close
                                    img(src="@img/close-btn.svg", alt="Close")
                            article.tense__content
                                include html/grammar/futureSimple/tense-slide-1
                                include html/grammar/futureSimple/tense-slide-2
                                include html/grammar/futureSimple/tense-slide-3
                                include html/grammar/futureSimple/tense-slide-4
                                include html/grammar/futureSimple/tense-slide-5

                                .tense__list-btn
                                    button.tense__list-done Освоено
                            .tense__footer
                        button.tense__arrow-next
                            img(class="tense__arrow-next-img", src="@img/arrow-next.svg", alt="next")
            include html/footer
            script(src='js/app.min.js')